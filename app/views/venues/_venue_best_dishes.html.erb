<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Best Dishes

    <a data-toggle="collapse" href="#venue_best_dishes_new_form">
      Add best dish
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @venue.best_dishes.each do |best_dish| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to best_dish, best_dish %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to best_dish, method: :delete, data: { confirm: "Do you really want to delete this best_dish" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="venue_best_dishes_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
