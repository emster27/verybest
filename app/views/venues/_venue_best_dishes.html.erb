<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Best Dishes

    <a data-toggle="collapse" href="#venue_best_dishes_new_form">
      Add best dish
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @venue.best_dishes.each do |best_dish| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to best_dish, best_dish %>

        <%= link_to best_dish, method: :delete, data: { confirm: "Do you really want to delete this best_dish" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="venue_best_dishes_new_form">
        <%= render partial: "venues/venue_best_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>
