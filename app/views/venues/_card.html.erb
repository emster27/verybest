<div class="card mb-3">
  <h2 class="card-header h4">
    Venue #<%= venue.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>State</dt>
      <dd><%= venue.state %></dd>

      <dt>City</dt>
      <dd><%= venue.city %></dd>

      <dt>Neighborhood</dt>
      <dd><%= venue.neighborhood %></dd>

      <dt>Cuisine</dt>
      <dd>
        <% if @venue.cuisine.present? %>
          <%= link_to venue.cuisine, venue.cuisine %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @venue.user.present? %>
          <%= link_to venue.user, venue.user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back venue, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_venue_url(venue), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to venue, method: :delete, data: { confirm: "Do you really want to delete this venue?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(venue.updated_at) %> ago
  </div>
</div>
