<div class="card mb-3">
  <h2 class="card-header h4">
    Venue #<%= venue.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>State</dt>
      <!-- Display state start -->
      <dd><%= venue.state %></dd>
      <!-- Display state end -->

      <dt>City</dt>
      <!-- Display city start -->
      <dd><%= venue.city %></dd>
      <!-- Display city end -->

      <dt>Neighborhood</dt>
      <!-- Display neighborhood start -->
      <dd><%= venue.neighborhood %></dd>
      <!-- Display neighborhood end -->

      <dt>Cuisine</dt>
      <!-- Display cuisine_id start -->
      <dd><%= venue.cuisine_id %></dd>
      <!-- Display cuisine_id end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= venue.user_id %></dd>
      <!-- Display user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back venue, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link venue start -->
      <div class="col">
        <%= link_to edit_venue_url(venue), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link venue end -->

      <!-- Delete link venue start -->
      <div class="col">
        <%= link_to venue, method: :delete, data: { confirm: "Do you really want to delete this venue?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link venue end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(venue.updated_at) %> ago
  </div>
</div>
